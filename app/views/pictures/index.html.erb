<h1>Listing pictures</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Hq</th>
      <th>Lq</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.title %></td>
        <td><img src="<%= picture.hq %>" style="max-width: 200px; max-height: 200px;"/></td>
        <td><img src="<%= picture.lq %>" style="max-width: 200px; max-height: 200px;"/></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_picture_path %>
